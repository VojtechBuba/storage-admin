					<div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
						<h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">{$file->getName()}</h2>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p class="text-muted">SouborÅ¯ celkem: {$data->getTotalCount()}</p>
			</div>
		</div>
	</div>
</div>
